{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/src",
    "rootDir": "./"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "build.ts"]
}
